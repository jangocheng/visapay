<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisaPayApp.App">
	<Application.Resources>

		<ResourceDictionary>
            <Color x:Key="azul">#432ee7</Color>
            <Style x:Key="input" TargetType="Entry">
                <Setter Property="TextColor" Value="#000"></Setter>
                <Setter Property="BackgroundColor" Value="#fcfcfc"></Setter>
            </Style>

		    <Style x:Key="buttonAzul" TargetType="Button">
		        <Setter Property="BackgroundColor" Value="{StaticResource azul}"></Setter>
		        <Setter Property="TextColor" Value="#fff"></Setter>
		    </Style>
        </ResourceDictionary>

	</Application.Resources>
</Application>