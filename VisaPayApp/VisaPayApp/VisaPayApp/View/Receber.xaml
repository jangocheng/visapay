<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisaPayApp.View.Receber">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">

            <StackLayout Padding="10" >
                <Entry Keyboard="Numeric" Style="{StaticResource input}"
                       FontSize="60" Placeholder="R$ 0,00"
                       x:Name="txtValor"/>
            </StackLayout>

            <StackLayout VerticalOptions="CenterAndExpand">
                <StackLayout VerticalOptions="FillAndExpand">
                    <Button Style="{StaticResource buttonVerde}"
                            Text="EFETUAR" HeightRequest="80" 
                            Command="{Binding ButtonPagar}"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>